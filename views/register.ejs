<h1>Register</h1>
<%- include('./partials/message.ejs') %>
<form action="/user/register" method="post">
  <div>
      <label for="name">Name</label>
      <input type="text" name='name' placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>">
  </div>
  <br>
  <div>
      <label for="email">Email</label>
      <input type="text" name='email' placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>">
  </div>
   <br>
   <div>
       <label for="password">Password</label>
       <input type="password" name='password' placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>">
   </div>
   <br>
   <div>
       <label for="password2">Confirm Password</label>
       <input type="password" name='password2' placeholder="Confirm Password" value="<%= typeof passsword2 != 'undefined' ? password2 : '' %>">
   </div>
   <br>
   <button type="submit">Register</button>
</form>
<a href="/user/login">Login</a>